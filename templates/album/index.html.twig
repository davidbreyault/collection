{% extends 'base.html.twig' %}

{% block title %}Albums{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <ul class="albums-list">
            {% for album in albums|reverse %}
                <li>
                    <p><span>{{ album.year }}</span> - {{ album.title }}</p>
                    <p class="country">{{ album.country }}</p>
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('add_to_my_collection', {'id': album.id}) }}">Ajouter Ã  ma collection</a>
                    {% endif %}
                </li>
            {% endfor %}
            </ul>
        </div>
    </section>
{% endblock %}
